{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["env.d.ts", "src/server/**/*", "src/server/**/*.vue", "src/dto/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/server/*"],
      "@root/*": ["src/*"]
    }
  }
}